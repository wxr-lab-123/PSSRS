<!--pages/login/login.wxml-->
<navigation-bar title="登录" back="{{true}}" color="white" background="transparent"></navigation-bar>

<view class="login-container">
  <!-- Logo区域 -->
  <view class="logo-section">
    <view class="logo-icon">🏥</view>
    <text class="app-name">患者自助挂号</text>
    <text class="app-desc">便捷就医 · 智慧医疗</text>
  </view>

  <view class="form-container">
    <button class="wechat-login-btn" open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">
      <text class="wechat-icon"></text>
      <text>微信登录</text>
    </button>
    <view class="footer-tips">
      <text class="tip-text">仅支持微信授权登录</text>
    </view>
  </view>
</view>
