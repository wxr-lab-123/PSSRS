/* pages/appointment/appointment.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
}

.section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

/* 就诊人选择 */
.patient-scroll {
  width: 100%;
  white-space: nowrap;
}

.patient-list {
  display: inline-flex;
  gap: 20rpx;
  padding-right: 20rpx;
}

.patient-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  min-width: 160rpx;
}

.patient-item.active {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-color: #1890ff;
}

.patient-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.patient-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.patient-item.active .patient-name {
  color: white;
}

.patient-relation {
  font-size: 22rpx;
  color: #666;
  padding: 2rpx 10rpx;
  background: rgba(0,0,0,0.05);
  border-radius: 20rpx;
}

.patient-item.active .patient-relation {
  color: #1890ff;
  background: white;
}

.patient-add-btn {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-radius: 12rpx;
  border: 2rpx dashed #d9d9d9;
  min-width: 120rpx;
}

.add-icon {
  font-size: 36rpx;
  color: #999;
  line-height: 1;
  margin-bottom: 5rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* 日期选择 */
.date-scroll {
  width: 100%;
  white-space: nowrap;
}

.date-list {
  display: inline-flex;
  gap: 20rpx;
}

.date-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  min-width: 120rpx;
}

.date-item.active {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-color: #1890ff;
}

.date-week {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.date-item.active .date-week,
.date-item.active .date-day,
.date-item.active .date-month {
  color: white;
}

.date-day {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.date-month {
  font-size: 24rpx;
  color: #666;
}

/* 科室网格 */
.department-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
}

.dept-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 10rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
}

.dept-card.active {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  border-color: #1890ff;
}

.dept-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.dept-name {
  font-size: 26rpx;
  color: #333;
  text-align: center;
}

.dept-card.active .dept-name {
  color: white;
}

/* 医生列表 */
.doctor-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.doctor-card {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
}

.doctor-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.doctor-info {
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.doctor-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  overflow: hidden;
  background: #e5e5e5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.avatar-text {
  font-size: 32rpx;
  color: #666;
}

.doctor-info-main {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.doctor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.doctor-title {
  font-size: 24rpx;
  color: #1890ff;
  padding: 4rpx 12rpx;
  background: rgba(24, 144, 255, 0.1);
  border-radius: 6rpx;
}

.doctor-tags {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.doctor-type-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.tag-expert {
  color: #f5222d;
  background: rgba(245, 34, 45, 0.08);
}

.tag-normal {
  color: #52c41a;
  background: rgba(82, 196, 26, 0.08);
}

.doctor-price {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.doctor-specialty {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.time-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.time-slot {
  flex: 0 0 calc(33.333% - 10rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  background: white;
  border-radius: 8rpx;
  border: 2rpx solid #e8e8e8;
}

.time-slot.disabled {
  background: #f5f5f5;
  opacity: 0.5;
}

.slot-time {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.slot-status {
  font-size: 22rpx;
  color: #52c41a;
}

.time-slot.disabled .slot-status {
  color: #999;
}

/* 提示信息 */
.tips-section {
  background: #fff7e6;
  border-radius: 16rpx;
  padding: 30rpx;
  border-left: 6rpx solid #faad14;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #d46b08;
  margin-bottom: 15rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tip-item {
  font-size: 26rpx;
  color: #ad6800;
  line-height: 1.6;
}
