/* pages/today-register/today-register.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 日期头部 */
.date-header {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.date-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1890ff;
}

/* 主内容区域 - 左右布局 */
.main-content {
  flex: 1;
  display: flex;
  gap: 20rpx;
  overflow: hidden;
}

/* 左侧面板 - 科室列表 */
.left-panel {
  width: 200rpx;
  background: white;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 右侧面板 - 医生列表 */
.right-panel {
  flex: 1;
  background: white;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.panel-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 科室滚动区域 */
.department-scroll {
  flex: 1;
  height: 100%;
}

.department-item {
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  text-align: center;
  transition: all 0.3s;
}

.department-item.active {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.dept-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.department-item.active .dept-name {
  color: white;
  font-weight: bold;
}

/* 医生滚动区域 */
.doctor-scroll {
  flex: 1;
  height: 100%;
  padding: 20rpx;
}

/* 医生列表 */
.doctor-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.doctor-item {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.doctor-info {
  display: flex;
  flex: 1;
  gap: 20rpx;
}

.doctor-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-text {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

.doctor-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.doctor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.doctor-title {
  font-size: 24rpx;
  color: #1890ff;
  margin-left: 10rpx;
}

.doctor-specialty {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.doctor-time {
  font-size: 24rpx;
  color: #999;
}

/* 号源类型标签 */
.tag {
  display: inline-block;
  padding: 6rpx 14rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  line-height: 1;
  border: 1rpx solid #d9d9d9;
}

.tag-normal {
  background: #ffffff;
  color: #595959;
  border-color: #d9d9d9;
}

.tag-expert {
  background: #f6ffed;
  color: #52c41a;
  border-color: #b7eb8f;
}

.time-label {
  color: #666;
}

.doctor-action {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 10rpx;
}

.price {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.available {
  font-size: 24rpx;
  color: #52c41a;
}

.register-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  font-size: 26rpx;
}

/* 空状态 */
.empty-state {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 0 10rpx;
}

.modal-body {
  max-height: 70vh;
  overflow-y: auto;
  padding: 30rpx;
}

/* 详情区块 */
.detail-section {
  margin-bottom: 30rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.detail-doctor {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 12rpx;
}

.detail-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-txt {
  font-size: 40rpx;
  color: white;
  font-weight: bold;
}

.detail-info {
  flex: 1;
}

.detail-name {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-wrap: wrap;
}

.doctor-title-tag {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 6rpx;
  font-weight: normal;
}

.detail-dept {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 8rpx;
}

.detail-specialty {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.5;
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-item:last-child {
  border-bottom: none;
}

.item-label {
  font-size: 28rpx;
  color: #666;
}

.item-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.price-value {
  color: #ff4d4f !important;
  font-weight: bold;
  font-size: 32rpx;
}

.status-available {
  color: #52c41a !important;
}

.status-full {
  color: #ff4d4f !important;
}

/* 温馨提示 */
.tips-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  background: #fff7e6;
  padding: 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #faad14;
}

.tip-text {
  font-size: 26rpx;
  color: #ad6800;
  line-height: 1.6;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 30rpx;
  border-top: 2rpx solid #f0f0f0;
}

.btn-cancel,
.btn-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
  border: none;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
}

.btn-confirm[disabled] {
  background: #d9d9d9;
  color: #999;
}
