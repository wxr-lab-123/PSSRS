<!--index.wxml-->
<navigation-bar title="自助挂号预约" back="{{false}}" color="#000000" background="#ffffff"></navigation-bar>
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 顶部品牌区域
    <view class="header-branding">
      <view class="brand-logo">
        <view class="medical-cross">+</view>
      </view>
      <view class="brand-info">
        <text class="hospital-name">智慧医疗中心</text>
        <text class="hospital-slogan">专业 · 关爱 · 守护</text>
      </view>
    </view> -->

    <!-- 顶部轮播广告 -->
    <view class="banner-section">
      <swiper class="banner-swiper" indicator-dots="true" autoplay="true" interval="5000" circular="true" indicator-color="rgba(255,255,255,0.6)" indicator-active-color="#0066CC">
        <swiper-item>
          <image class="banner-image" src="/images/banner1.jpg" mode="aspectFill"></image>
        </swiper-item>
        <swiper-item>
          <image class="banner-image" src="/images/banner2.jpg" mode="aspectFill"></image>
        </swiper-item>
      </swiper>
    </view>

    <!-- 核心功能模块 (2x2布局) -->
    <view class="core-functions">
      <view class="function-card" bindtap="navigateTo" data-url="/pages/today-register/today-register">
        <view class="icon-container blue-bg">
          <text class="icon-text">📅</text>
        </view>
        <view class="card-text">
          <text class="card-title">当日挂号</text>
          <text class="card-desc">实时挂号 即刻就诊</text>
        </view>
      </view>

      <view class="function-card" bindtap="navigateTo" data-url="/pages/appointment/appointment">
        <view class="icon-container green-bg">
          <text class="icon-text">🕒</text>
        </view>
        <view class="card-text">
          <text class="card-title">预约挂号</text>
          <text class="card-desc">提前预约 专家门诊</text>
        </view>
      </view>

      <view class="function-card" bindtap="navigateTo" data-url="/pages/take-number/take-number">
        <view class="icon-container orange-bg">
          <text class="icon-text">🎫</text>
        </view>
        <view class="card-text">
          <text class="card-title">预约取号</text>
          <text class="card-desc">凭证取号 快速签到</text>
        </view>
      </view>

      <view class="function-card" bindtap="navigateTo" data-url="/pages/inquiry/inquiry">
        <view class="icon-container teal-bg">
          <text class="icon-text">🔍</text>
        </view>
        <view class="card-text">
          <text class="card-title">自助查询</text>
          <text class="card-desc">报告查询 费用明细</text>
        </view>
      </view>
    </view>
    
    <!-- 医疗服务与指南 -->
    <view class="section-group">
      <!-- 就诊流程 -->
      <view class="content-card">
        <view class="card-header">
          <view class="header-mark"></view>
          <text class="header-title">就诊流程</text>
        </view>
        <view class="process-flow">
          <view class="process-step">
            <view class="step-circle">1</view>
            <text class="step-label">挂号取号</text>
          </view>
          <view class="process-arrow"></view>
          <view class="process-step">
            <view class="step-circle">2</view>
            <text class="step-label">候诊签到</text>
          </view>
          <view class="process-arrow"></view>
          <view class="process-step">
            <view class="step-circle">3</view>
            <text class="step-label">医生就诊</text>
          </view>
          <view class="process-arrow"></view>
          <view class="process-step">
            <view class="step-circle">4</view>
            <text class="step-label">缴费取药</text>
          </view>
        </view>
      </view>

      <!-- 温馨提示 -->
      <view class="content-card">
        <view class="card-header">
          <view class="header-mark orange-mark"></view>
          <text class="header-title">就诊须知</text>
        </view>
        <view class="notice-list">
          <view class="notice-item">
            <text class="notice-bullet">•</text>
            <text class="notice-content">请携带本人有效身份证件实名就诊</text>
          </view>
          <view class="notice-item">
            <text class="notice-bullet">•</text>
            <text class="notice-content">建议提前15分钟到达诊区候诊</text>
          </view>
          <view class="notice-item">
            <text class="notice-bullet">•</text>
            <text class="notice-content">如需取消预约，请至少提前2小时操作</text>
          </view>
        </view>
      </view>
    </view>
    
    <!-- 底部页脚 -->
    <view class="app-footer">
      <view class="footer-nav">
        <text class="nav-link">医院概况</text>
        <text class="nav-divider">|</text>
        <text class="nav-link">科室导航</text>
        <text class="nav-divider">|</text>
        <text class="nav-link">联系我们</text>
      </view>
      <text class="footer-copyright">© 2025 智慧医疗中心 版权所有</text>
      <text class="footer-icp">服务热线：010-12345678</text>
    </view>
  </view>
</scroll-view>