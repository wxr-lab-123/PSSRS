/* pages/take-number/take-number.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  padding: 20rpx;
}

/* 搜索相关样式已移除 */

.appointment-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.appointment-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.order-no {
  font-size: 28rpx;
  color: #666;
}

.status {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status.paid {
  background: #e6f7ff;
  color: #1890ff;
}

/* paid状态对应待就诊，可取号 */

.status.taken {
  background: #f6ffed;
  color: #52c41a;
}

.status.pending {
  background: #fff7e6;
  color: #fa8c16;
}

.status.cancelled {
  background: #f5f5f5;
  color: #999;
}

.loading-state {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.item-info {
  margin-bottom: 20rpx;
}

.info-row {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  color: #999;
  min-width: 160rpx;
}

.value {
  color: #333;
  font-weight: 500;
}

.take-btn {
  width: 100%;
  background: linear-gradient(135deg, #1e90ff, #0056b3);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 25rpx;
  font-size: 30rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 16rpx rgba(30, 144, 255, 0.25);
}

.take-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 150rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}
