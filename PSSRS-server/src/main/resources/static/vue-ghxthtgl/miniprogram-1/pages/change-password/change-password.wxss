/* pages/change-password/change-password.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f7f7f7;
}

.form-container {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  margin-bottom: 40rpx;
  position: relative;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding: 20rpx 0;
}

.icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #666;
}

.input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

.input-placeholder {
  color: #999;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 60rpx;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(90deg, #1E90FF, #00BFFF);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(30, 144, 255, 0.3);
}

.submit-btn:active {
  opacity: 0.9;
}

.submit-btn[disabled] {
  background: #ccc;
  box-shadow: none;
  color: #fff;
}