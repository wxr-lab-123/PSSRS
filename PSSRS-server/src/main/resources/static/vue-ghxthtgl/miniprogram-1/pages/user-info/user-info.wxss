/* pages/user-info/user-info.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 100rpx 30rpx 30rpx;
}

.info-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 信息列表 */
.info-list {
  padding: 20rpx 0;
}

.info-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 35rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 30rpx;
  color: #666;
  font-weight: 500;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  flex: 1;
  text-align: right;
  margin-left: 40rpx;
}

/* 操作区域 */
.action-section {
  padding: 40rpx;
  background: #f8f8f8;
}

.edit-btn {
  background: #333;
  color: white;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}
