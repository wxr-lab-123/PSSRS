.container { min-height: 100vh; background: #f5f5f5; padding: 100rpx 30rpx 30rpx; }
.empty { text-align: center; color: #999; font-size: 28rpx; margin-top: 80rpx; }
.list { height: calc(100vh - 180rpx); padding-bottom: calc(160rpx + env(safe-area-inset-bottom)); }
.item { background: #fff; border-radius: 20rpx; padding: 28rpx 30rpx; margin-bottom: 24rpx; box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.06); }
.row { display: flex; align-items: center; justify-content: space-between; }
.badges { display: flex; align-items: center; gap: 12rpx; }
.title { font-size: 32rpx; color: #333; font-weight: 600; }
.sub { margin-top: 10rpx; font-size: 28rpx; color: #666; }
.time { margin-top: 8rpx; font-size: 24rpx; color: #999; }
.status { padding: 4rpx 14rpx; border-radius: 999rpx; font-size: 24rpx; }
.read-flag { padding: 4rpx 12rpx; border-radius: 999rpx; font-size: 24rpx; }
.read-flag.read { background: #f0f0f0; color: #666; }
.read-flag.unread { background: #e6f7ff; color: #1890ff; border: 1rpx solid #91d5ff; }
.status.approved { background: #e6fffb; color: #13c2c2; }
.status.rejected { background: #fff1f0; color: #f5222d; }
.actions { position: fixed; left: 0; right: 0; bottom: env(safe-area-inset-bottom); padding: 20rpx 30rpx; background: transparent; pointer-events: none; }
.clear-btn { background: #333; color: #fff; border: none; border-radius: 999rpx; padding: 24rpx; font-size: 30rpx; pointer-events: auto; }
.bottom-gap { height: calc(180rpx + env(safe-area-inset-bottom)); }
