/* pages/edit-info/edit-info.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 100rpx 30rpx 30rpx;
}

.form-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 表单区域 */
.form-section {
  padding: 20rpx 0;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 35rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.disabled {
  background: #f8f8f8;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  width: 150rpx;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  text-align: right;
}

.form-input.placeholder {
  color: #999;
}

.form-arrow {
  font-size: 40rpx;
  color: #ccc;
  font-weight: 300;
  margin-left: 10rpx;
}

.form-value {
  flex: 1;
  font-size: 30rpx;
  color: #999;
  text-align: right;
  margin-right: 20rpx;
}

.form-tip {
  font-size: 24rpx;
  color: #ff6b6b;
  padding: 4rpx 12rpx;
  background: #ffe0e0;
  border-radius: 8rpx;
}

/* 提示区域 */
.tips-section {
  padding: 40rpx;
  background: #f8f9fa;
  border-top: 1rpx solid #e9ecef;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  color: #666;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.tips-text {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 40rpx;
  margin-bottom: 10rpx;
}

/* 操作区域 */
.action-section {
  padding: 40rpx;
}

.save-btn {
  background: #333;
  color: white;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}
