/* Â∑≤ÁôªÂΩïÁä∂ÊÄÅ */
.user-section {
  padding: 0 30rpx;
  position: relative;
  z-index: 1;
  animation: fadeIn 0.5s ease-in-out;
}

.user-header {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10px);
  position: relative;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.user-header:active {
  transform: scale(0.98);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid rgba(255, 255, 255, 0.4);
}

.user-avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-phone {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.user-arrow {
  font-size: 50rpx;
  color: rgba(255, 255, 255, 0.8);
  font-weight: 300;
  margin-left: auto;
  transition: transform 0.3s ease;
}

.user-header:active .user-arrow {
  transform: translateX(10rpx);
}

/* ÂäüËÉΩËèúÂçï */
.menu-section {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s ease-out;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 35rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.menu-item::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  transform: translateX(-10rpx);
  transition: transform 0.3s ease;
}

.menu-item:active {
  background-color: #f8f8f8;
  padding-left: 36rpx;
}

.menu-item:active::after {
  transform: translateX(0);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #e8f4ff 0%, #f0f9ff 100%);
  color: #1890ff;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.menu-arrow {
  font-size: 32rpx;
  color: #ccc;
  transition: transform 0.3s ease;
}

.menu-item:active .menu-arrow {
  transform: translateX(10rpx);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-title {
  font-size: 30rpx;
  color: #333;
}

.menu-arrow {
  font-size: 50rpx;
  color: #ccc;
  font-weight: 300;
}

