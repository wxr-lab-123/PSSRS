.not-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
  position: relative;
  z-index: 1;
  animation: fadeIn 0.5s ease-in-out;
}

.login-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
}

