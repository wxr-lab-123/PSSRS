/**index.wxss**/
page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, #e8f4ff 0%, #f5f5f5 100%);
  overflow-x: hidden;
}

.scrollarea {
  /* 让 scroll-view 占满可视区域，确保可以上下滑动 */
  flex: 1;
  height: 100vh;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.container {
  padding: 20rpx;
  padding-bottom: 40rpx;
}

/* 轮播广告区域 */
.banner-section {
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.banner-section:active {
  transform: scale(0.98);
}

.banner-swiper {
  width: 100%;
  height: 280rpx;
  border-radius: 20rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
}

/* 功能网格 */
.function-grid {
  margin-bottom: 30rpx;
}

.grid-row {
  display: flex;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.grid-item {
  flex: 1;
  min-height: 190rpx;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.grid-item::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, transparent 70%);
  transform: scale(0);
  transition: transform 0.6s ease;
}

.grid-item:active {
  transform: translateY(4rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.grid-item:active::before {
  transform: scale(1);
}

.item-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: relative;
  z-index: 1;
}

/* 医生和科室查询按钮样式 */
.search-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 10rpx;
}

.search-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.search-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.08);
}

.search-btn:active::before {
  left: 100%;
}

.doctor-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.department-btn {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.btn-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.item-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  letter-spacing: 2rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.item-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.4;
}

/* 颜色主题 - 增强渐变效果 */
.blue {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.red {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.dark-blue {
  background: linear-gradient(135deg, #4e54c8 0%, #8f94fb 100%);
}

.orange {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.cyan {
  background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
}

.purple {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
}

.teal {
  background: linear-gradient(135deg, #0ba360 0%, #3cba92 100%);
}

.violet {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.pink {
  background: linear-gradient(135deg, #fccb90 0%, #d57eeb 100%);
}

/* 基础信息模块 */
.info-section {
  margin-bottom: 30rpx;
  animation: slideUp 0.5s ease-out;
}

.info-card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.info-card::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(180deg, #1890ff 0%, #40a9ff 100%);
}

.info-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  padding-left: 10rpx;
}

.info-content {
  color: #666;
  line-height: 1.6;
  padding-left: 10rpx;
}

/* 底部信息样式优化 */
.footer-info {
  padding: 30rpx 0;
  text-align: center;
  color: #999;
  font-size: 24rpx;
  animation: fadeIn 0.6s ease-in;
}

/* 添加滚动到顶部按钮 */
.scroll-top-btn {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(24, 144, 255, 0.4);
  opacity: 0;
  transition: all 0.3s ease;
  z-index: 999;
}

.scroll-top-btn.show {
  opacity: 1;
}

.scroll-top-btn:active {
  transform: scale(0.9);
  opacity: 0.8;
}

/* 就诊流程样式 */
.flow-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.flow-step {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.flow-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
  padding-top: 6rpx;
}

/* 注意事项样式 */
.notice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 15rpx;
}

.notice-item:last-child {
  margin-bottom: 0;
}

.notice-icon {
  font-size: 32rpx;
  color: #ff6b6b;
  margin-right: 15rpx;
  line-height: 1.2;
  flex-shrink: 0;
}

.notice-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.6;
  color: #555;
}

/* 底部信息 */
.footer-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  gap: 10rpx;
}

.info-text {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}
