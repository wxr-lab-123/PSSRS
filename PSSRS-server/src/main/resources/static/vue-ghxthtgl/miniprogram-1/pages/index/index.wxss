/**index.wxss**/
/* 医疗配色变量 */
page {
  --primary-color: #0066CC;
  --secondary-color: #4CAF50;
  --warning-color: #FF9800;
  --info-color: #00BCD4;
  --bg-color: #F5F7FA;
  --text-main: #333333;
  --text-sub: #666666;
  --text-light: #999999;
  --card-bg: #FFFFFF;
  
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

.scrollarea {
  flex: 1;
  height: 100vh;
}

.container {
  padding: 0 30rpx 40rpx;
}

/* 顶部品牌区 */
.header-branding {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
}

.brand-logo {
  width: 80rpx;
  height: 80rpx;
  background: var(--primary-color);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 102, 204, 0.3);
}

.medical-cross {
  color: white;
  font-size: 50rpx;
  font-weight: bold;
  line-height: 1;
  margin-top: -6rpx; 
}

.brand-info {
  display: flex;
  flex-direction: column;
}

.hospital-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 6rpx;
}

.hospital-slogan {
  font-size: 24rpx;
  color: var(--text-sub);
}

/* 轮播图 */
.banner-section {
  width: 100%;
  height: 300rpx;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 核心功能卡片 Grid */
.core-functions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.function-card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.function-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.icon-container {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.icon-text {
  font-size: 40rpx;
}

/* 图标背景色 */
.blue-bg { background: rgba(0, 102, 204, 0.1); color: var(--primary-color); }
.green-bg { background: rgba(76, 175, 80, 0.1); color: var(--secondary-color); }
.orange-bg { background: rgba(255, 152, 0, 0.1); color: var(--warning-color); }
.teal-bg { background: rgba(0, 188, 212, 0.1); color: var(--info-color); }

.card-text {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-main);
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: var(--text-light);
}

/* 内容板块 */
.section-group {
  margin-bottom: 40rpx;
}

.content-card {
  background: var(--card-bg);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-mark {
  width: 8rpx;
  height: 32rpx;
  background: var(--primary-color);
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.orange-mark {
  background: var(--warning-color);
}

.header-title {
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-main);
}

/* 流程图样式 */
.process-flow {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 0;
}

.process-step {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-circle {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background: rgba(0, 102, 204, 0.1);
  color: var(--primary-color);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.step-label {
  font-size: 22rpx;
  color: var(--text-sub);
}

.process-arrow {
  flex: 1;
  height: 2rpx;
  background: #eee;
  margin: 0 10rpx;
  margin-bottom: 34rpx; /* Align with circle center roughly */
}

/* 须知列表 */
.notice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-item {
  display: flex;
  align-items: flex-start;
}

.notice-bullet {
  color: var(--warning-color);
  font-size: 32rpx;
  line-height: 1.4;
  margin-right: 12rpx;
}

.notice-content {
  font-size: 26rpx;
  color: var(--text-sub);
  line-height: 1.5;
}

/* 底部页脚 */
.app-footer {
  padding: 40rpx 0 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.footer-nav {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.nav-link {
  font-size: 24rpx;
  color: var(--text-sub);
  padding: 0 16rpx;
}

.nav-divider {
  font-size: 20rpx;
  color: #ddd;
}

.footer-copyright, .footer-icp {
  font-size: 20rpx;
  color: var(--text-light);
  line-height: 1.6;
}